<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wordle.StatsPage"
             Title="Game Stats">
    <StackLayout Padding="20" Spacing="10">
        <!-- Labels for stats -->
        <Label x:Name="GamesPlayedLabel" FontSize="18" Text="Games Played: 0" />
        <Label x:Name="GamesWonLabel" FontSize="18" Text="Games Won: 0" />
        <Label x:Name="WinRateLabel" FontSize="18" Text="Win Rate: 0%" />
        <Label x:Name="CurrentWinStreakLabel" FontSize="18" Text="Current Win Streak: 0" />
        <Label x:Name="MaxWinStreakLabel" FontSize="18" Text="Max Win Streak: 0" />

        <!-- Back button -->
        <Button Text="Back to Game" FontSize="18" Clicked="OnBackToGameClicked" />
    </StackLayout>
</ContentPage>
